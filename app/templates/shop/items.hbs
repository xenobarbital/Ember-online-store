<h3><small>{{model.shopName}}</small></h3>

<div class="well">
    <table class="table table-striped table-condensed">
        <thead>
            <th>Item</th>
            <th>Description</th>
            <th>Price</th>
        </thead>

        <tbody>
            {{#each model.items as |item|}}
                <tr>
                    <td>{{item.itemName}}</td>
                    <td>{{item.itemDetails}}</td>
                    <td>${{item.itemPrice}}</td>
                    <td>
                        {{#link-to 'shop.item.edit' item.id class="btn btn-success btn-xs"}}
                            Edit
                        {{/link-to}}
                        <button class="btn btn-danger btn-xs" {{action 'deleteItem' item}}>Delete</button>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

{{#if activeForm}}
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">Item name</label>
            <div class="col-sm-8">
                {{input type='text' value=itemName class='form-control' placeholder='item name'}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Item description</label>
            <div class="col-sm-8">
                {{input type='text' value=itemDetails class='form-control' placeholder='item details'}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Item price</label>
            <div class="col-sm-8">
                {{input type='number' value=itemPrice class='form-control' placeholder='item price'}}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-2">
                <button type="submit" class="btn btn-default" disabled={{isDisabled}} {{action 'saveItem' model}}>Save</button>
                <button type="submit" class="btn btn-default" {{action 'toggleForm'}}>Back</button>
            </div>
        </div>
    </div>
{{else}}
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-3">
                <button type="submit" class="btn btn-default" {{action 'toggleForm'}}>Open form</button>
            </div>
        </div>
    </div>
{{/if}}
