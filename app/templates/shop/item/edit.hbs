<h3><small>Edit item</small></h3>

<div class="form-horizontal">
    <div class="form-group">
        <label class="col-sm-2 control-label">Item name</label>
        <div class="col-sm-8">
            {{input type='text' value=model.itemName class='form-control' placeholder='item name'}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Item description</label>
        <div class="col-sm-8">
            {{input type='text' value=model.itemDetails class='form-control' placeholder='item details'}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Item price</label>
        <div class="col-sm-8">
            {{input type='number' value=model.itemPrice class='form-control' placeholder='item price'}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-2">
            <button type="submit" class="btn btn-default" {{action 'saveItem' model}}>Save</button>
        </div>
    </div>
</div>
