<h2>{{model.shopName}}</h2>

<div class="well">
    <table class="table table-striped table-condensed">
        <thead>
            <th>Item</th>
            <th>Description</th>
            <th>Price</th>
        </thead>

        <tbody>
            {{#if model.shopStock}}
                {{#each model.shopStock as |item|}}
                    <tr>
                        <td>{{item.name}}</td>
                        <td>{{item.description}}</td>
                        <td>{{item.price}}</td>
                        <td>
                            ***Buttons here***
                        </td>
                    </tr>
                {{/each}}
            {{/if}}
        </tbody>
    </table>
</div>

{{#if activeForm}}
    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">Item name</label>
            <div class="col-sm-8">
                {{input type="text" value=itemName class="form-control" placeholder="Item name"}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Item description</label>
            <div class="col-sm-8">
                {{input type="text" value=itemDescription class="form-control" placeholder="Item description"}}
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Item price</label>
            <div class="col-sm-8">
                {{input type="number" min="1" value=itemPrice class="form-control" placeholder="Item price"}}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-2">
                <button type="submit" class="btn btn-default" disabled={{isDisabled}} {{action 'saveItem'}}>Save</button>
                <button type="submit" class="btn btn-default" {{action 'toggleForm'}}>Back</button>
            </div>
        </div>
    </div>
{{else}}
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-3">
                <button type="submit" class="btn btn-default" {{action 'toggleForm'}}>Open form</button>
            </div>
        </div>
    </div>
{{/if}}
